    <!-- Bootstrap Core CSS -->
    <link href="~/Content/BAdminPages/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/Content/BAdminPages/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/BAdminPages/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Content/BAdminPages/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="~/Content/AdminSite.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div id="wrapper">

        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">

            <!-- navbar sus -->
            <!-- LOGO -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Logo</a>
            </div>


            <ul class="nav navbar-top-links navbar-right">

                <li>
                    <span class="blackColor">Hello @CurrentUser.Name</span>
                </li>

                <!-- HOME -->
                <li>
                    <a href="/Home/Index"> <span class="glyphicon glyphicon-home blackColor"></span> </a>
                </li>

                <!-- USER -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="glyphicon glyphicon-user blackColor"></span> <span class="glyphicon glyphicon-triangle-bottom blackColor"></span>
                    </a>

                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="/Authentication/Update"><span class="glyphicon glyphicon-user"></span> Account Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Authentication/SignOut"><span class="glyphicon glyphicon-cog"></span> Sign Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- /navbar sus -->
            <!-- navbar stanga -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="/Admin/Index">Index</a>
                        </li>
                        <li>
                            @Html.ActionLink("Bicycles", "Index", "Bicycle", null, new { @class = "" })
                        </li>
                        <li>
                            @Html.ActionLink("Centers", "Index", "", null, new { @class = "" })
                        </li>
                        <li>
                            @Html.ActionLink("Orders", "Index", "", null, new { @class = "" })
                        </li>
                        <li>
                            @Html.ActionLink("Other Queries", "Index", "", null, new { @class = "" })
                        </li>
                    </ul>
                </div>
            </div>
            <!--/navbar stanga-->
        </nav>


            @RenderBody()
</div>

    <!-- jQuery -->
    <script src="~/Content/BAdminPages/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/BAdminPages/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Content/BAdminPages/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Content/BAdminPages/sb-admin-2.js"></script>

</body>
