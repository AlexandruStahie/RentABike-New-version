@model RentABike.Models.User

@{
    ViewBag.Title = "Sign In";
}

<h2 class="text-center style1">Sign In</h2>
<br />

    @using(Html.BeginForm("SignIn", "Authentication", FormMethod.Post))
        {
        <div class="row">
            <div class="center">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Username", autocomplete = "off" } })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="center">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control text-box single-line", placeholder = "Password", autocomplete = "off" })
                </div>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-sm-11 form-group">
                <div class="centerbutton">
                    <input type="submit" value="Sign In" /><br />
                    <a id="ShowRegisterPage" href="#">Don't have account? Register here!</a>
                </div>
            </div>
        </div>
    }

<script src="~/Scripts/App/Register.js"></script>