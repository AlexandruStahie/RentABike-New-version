@model RentABike.Models.Bicycle
@{
    ViewBag.Title = "AddBicycle";
    Layout = "~/Views/Shared/_BAdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Bicycle</h1>
        </div>
    </div>

    <div class="col-sm-12">
        @using(Html.BeginForm("AddBicycle", "Bicycle", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

            <div class="row">
                <div class="col-lg-6 margin">
                    @Html.LabelFor(x => x.BModel, "Model")
                    @Html.EditorFor(x => x.BModel, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                </div>
            </div>

                <div class="row">
                    <div class="col-lg-6 margin">
                        @Html.LabelFor(x => x.PricePerHour, "Price per hour")
                        @Html.EditorFor(x => x.PricePerHour, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 margin">
                        @Html.LabelFor(x => x.Details, "Details")<br />
                        @Html.TextAreaFor(x => x.Details, new { htmlAttributes = new { @class = "form-control", rows = 5, autocomplete = "off" } })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 margin">
                        @Html.LabelFor(x => x.BicycleImg, "Add image")<br />
                        <input type="file" id="image1" name="image1" />
                    </div>
                </div>

                @*<div class="displayImage">

                </div>*@

                <br />
                <div class="row">
                    <div class="col-sm-11 form-group margin">
                        <div class="left">
                            <input type="submit" value="Save" />
                            <a href="/Bicycle/Index" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span> Back</a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>


<script language="JavaScript" type="text/javascript" src="~/Scripts/App/Bicycle.js"></script>