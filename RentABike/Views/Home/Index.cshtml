@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="Index"> </div>

<div id="myCarousel" class="jumbotron text-center carousel slide" data-ride="carousel">
    <h1>Rent a bike</h1>
    <br />
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="img-responsive centerImageCarousel" src="~/Content/Images/iamge0.jpg">
        </div>
        <div class="item">
            <img class="img-responsive centerImageCarousel" src="~/Content/Images/image1.jpg">
        </div>
        <div class="item">
            <img class="img-responsive centerImageCarousel" src="~/Content/Images/image2.jpg">
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>


</div>

<div id="AboutUs" class="slideanim container-fluid">
    @Html.Partial("AboutUs")
</div>

<div id="Contact" class="slideanim container-fluid greyColor">
    @Html.Partial("Contact")
</div>

<div id="Map" class="slideanim container-fluid">
    @Html.Partial("GoogleMap")
</div>

@if(!CurrentUser.Identity.IsAuthenticated)
{
    <div id="SignIn" class="slideanim container-fluid greyColor">
        @Html.Partial("~/Views/Authentication/SignIn.cshtml")

        @Html.Raw(TempData["msg"])
        @Html.Partial("~/Views/Authentication/Register.cshtml")
    </div>
}


@if(CurrentUser.Identity.IsAuthenticated)
{ 
    <div id="Bicycles" class="slideanim container-fluid greyColor">
        @Html.Action("UserShowBicycles", "Bicycle")
    </div>
}
else
{ 
    <div id="Bicycles" class="slideanim container-fluid">
        @Html.Action("UserShowBicycles", "Bicycle")
    </div>
}

